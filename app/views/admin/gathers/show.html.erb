<div><%= link_to 'Back', admin_gathers_path %></div>

<h1><%= @gather.title %></h1>

<div class="row">
  <span class="span2">ID:</span><span class="span4"><%= @gather.id %></span>
</div>

<div class="row">
  <span class="span2">Updated at:</span><span class="span4"><%= @gather.updated_at %></span>
</div>

<div class="row">
  <span class="span2">Owner:</span><span class="span4"><%= link_to @user.email, admin_user_path(@user) %></span>
</div>

<div class="row">
  <span class="span2">Gather path:</span><span class="span4"><%= link_to gather_path(@gather), gather_path(@gather) %></span>
</div>

<div class="row">
  <span class="span2">Original URL:</span><span class="span4"><%= link_to truncate(@gather.url), @gather.url %></span>
</div>

<hr/>

<div class="row">
  <span class="span8"><%= @gather.content.html_safe %></span>
</div>

