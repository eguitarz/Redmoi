<% if current_user %>

<p>
    <%= link_to '<i class="icon-plus icon-white"></i> New URL'.html_safe, new_gather_path, :class => "btn btn-primary btn-mini" %>
    <%= link_to_function '<i class="icon-pencil icon-white"></i> Edit List'.html_safe, 'edit()', :class => "btn btn-primary btn-mini", :id => "menu-edit" %>
</p>

  <% unless @gathers.nil? %>
    <ul class="menu-ul">
    <% @gathers.each do |g| %>
      <li class="menu-li">
        <span class="menu-del"><%= link_to 'x', gather_path(g), :method => :delete %></span>
        <span class="gather"><%= link_to g.title, gather_path(g) %></span>
      </li>
    <% end %>
    </ul>
  <% end %>
<% end %>
